<div id="login-container">
  <h1>Welcome Back!</h1>
  <p>Log in to your FitConnect account</p>
  <form action="/login" method="POST">
    <div class="input-group">
      <label for="email">Email</label>
      <input
        type="email"
        id="email"
        name="email"
        placeholder="Enter your email"
        required
      />
    </div>
    <div class="input-group">
      <label for="password">Password</label>
      <input
        type="password"
        id="password"
        name="password"
        placeholder="Enter your password"
        required
      />
    </div>
    <button type="submit">Login</button>
  </form>
  <p>Don't have an account? <a href="/register">Create one here</a></p>
</div>

<style>
  /* Body 설정 */
  body {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    margin: 0;
    font-family: 'Poppins', sans-serif;
    position: relative;
    overflow: hidden;
  }

  /* 배경 이미지 컨테이너 */
  #background-slideshow {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    overflow: hidden;
  }

  .slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    opacity: 0;
    transition: opacity 2s ease-in-out;
  }

  .slide.active {
    opacity: 1;
  }

  /* 로그인 컨테이너 */
  #login-container {
    position: relative;
    z-index: 1; /* 배경 오버레이 위에 위치 */
    width: 100%;
    max-width: 360px;
    background: rgba(255, 255, 255, 0.9); /* 약간 투명하게 */
    padding: 30px;
    border-radius: 15px;
    box-shadow: 0 8px 15px rgba(0, 0, 0, 0.3);
    text-align: center;
  }

  #login-container h1 {
    font-size: 28px;
    margin-bottom: 10px;
    color: #333;
  }

  #login-container p {
    font-size: 14px;
    color: #666;
    margin-bottom: 20px;
  }

  form {
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  .input-group {
    text-align: left;
  }

  label {
    font-size: 14px;
    font-weight: 600;
    margin-bottom: 5px;
    display: block;
    color: #555;
  }

  input[type='email'],
  input[type='password'] {
    width: 100%;
    padding: 12px 15px;
    font-size: 16px;
    border: 1px solid #ccc;
    border-radius: 8px;
    box-sizing: border-box;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
  }

  input[type='email']:focus,
  input[type='password']:focus {
    outline: none;
    border-color: #007bff;
    box-shadow: 0 0 8px rgba(0, 123, 255, 0.2);
  }

  button {
    padding: 12px;
    background: #007bff;
    color: white;
    border: none;
    border-radius: 8px;
    font-size: 16px;
    font-weight: bold;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.2s ease;
  }

  button:hover {
    background: #0056b3;
    transform: translateY(-2px);
  }

  p {
    margin-top: 15px;
    font-size: 14px;
    color: #333;
  }

  a {
    color: #007bff;
    text-decoration: none;
    font-weight: bold;
  }

  a:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    #login-container {
      padding: 20px;
    }

    button {
      font-size: 14px;
      padding: 10px;
    }
  }
</style>

<div id="background-slideshow">
  <div
    class="slide"
    style="background-image: url('/image/login-background1.jpg')"
  ></div>
  <div
    class="slide"
    style="background-image: url('/image/login-background2.jpg')"
  ></div>
  <div
    class="slide"
    style="background-image: url('/image/login-background3.jpg')"
  ></div>
  <div
    class="slide"
    style="background-image: url('/image/login-background4.jpg')"
  ></div>
  <div
    class="slide"
    style="background-image: url('/image/login-background5.jpg')"
  ></div>
  <div
    class="slide"
    style="background-image: url('/image/login-background6.jpg')"
  ></div>
</div>

<script>
  // 배경 이미지 전환
  const slides = document.querySelectorAll('.slide');
  let currentSlide = 0;

  function showNextSlide() {
    slides[currentSlide].classList.remove('active');
    currentSlide = (currentSlide + 1) % slides.length;
    slides[currentSlide].classList.add('active');
  }

  // 3초마다 슬라이드 전환
  setInterval(showNextSlide, 5000);

  // 첫 슬라이드 활성화
  slides[currentSlide].classList.add('active');
</script>
